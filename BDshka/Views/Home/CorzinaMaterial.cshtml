@model IEnumerable<BDshka.Models.Order_MaterialModel>

<h2>Корзина</h2>
<p><a asp-action="Materials" asp-controller="home">Добавить материал в корзину</a></p>
<p><a asp-action="Index" asp-controller="home">В меню</a></p>

<table class="table">
    <tr><th>ID</th><th>Дата</th><th>Статус</th><th>ID Клиента</th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID_Order</td>
            <td>@item.Date_Order</td>
            <td>@item.ID_Stat</td>
            <td>@item.ID_Client</td>
            <td>
                <form asp-controller="admin" asp-action="DeleteOrder" method="post" asp-route-id="@item.ID_Order">
                    <input type="submit" value="Удалить" />
                </form>
            </td>
            <td>
                <form asp-controller="home" asp-action="MaterialNabor" asp-route-id="@item.ID_Order">
                    <input type="submit" value="Состав" />
                </form>
            </td>
        </tr>
    }
    <form asp-controller="admin" asp-action="DeleteAllOrderss" method="post">
        <input type="submit" value="Удалить Всё" />
    </form>
</table>