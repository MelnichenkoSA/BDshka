@model IEnumerable<BDshka.Models.RemontsModel>

<h2>Список услуг</h2>
<p><a asp-action="Corzina" asp-controller="Home">Корзина</a></p>

<table class="table">
    <tr><th>ID</th><th>Название</th><th>Стоимость</th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID_Remont</td>
            <td>@item.Title</td>
            <td>@item.Cost</td>
            <td>
                <form asp-controller="Account" asp-action="AddtoCorzinaRemont" method="post" asp-route-id="@item.ID_Remont">
                    <input type="submit" value="Выбрать" />
                </form>
            </td>
        </tr>
    }
</table>
